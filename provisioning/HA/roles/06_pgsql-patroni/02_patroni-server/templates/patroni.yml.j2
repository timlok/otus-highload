scope: {{ FAKE_DOMAIN }}
name: {{ ansible_hostname }}

restapi:
    listen: {{ ansible_eth1.ipv4.address }}:8008
    connect_address: {{ ansible_eth1.ipv4.address }}:8008

consul:
    host: 127.0.0.1:8500
    scheme: http
    register_service: true

bootstrap:
    dcs:
        ttl: 30
        loop_wait: 10
        retry_timeout: 10
        maximum_lag_on_failover: 1048576
        postgresql:
            use_pg_rewind: true

    initdb:
    - encoding: UTF8
    - data-checksums

    pg_hba:
    - host replication replicator 127.0.0.1/32 md5
    - host replication replicator {{ HOST_NAME_PG01 }} md5
    - host replication replicator {{ HOST_NAME_PG02 }} md5
    - host replication replicator {{ HOST_NAME_PG03 }} md5
    - host replication replicator {{ HOST_NAME_PG01 }}.{{ FAKE_DOMAIN }} md5
    - host replication replicator {{ HOST_NAME_PG02 }}.{{ FAKE_DOMAIN }} md5
    - host replication replicator {{ HOST_NAME_PG03 }}.{{ FAKE_DOMAIN }} md5
    - host all all {{ NET_POSTGRES_ALLOW }} md5

    users:
        admin:
            password: admin
            options:
                - createrole
                - createdb

postgresql:
    listen: 0.0.0.0:5432
    bin_dir: /usr/pgsql-11/bin
    connect_address: {{ ansible_eth1.ipv4.address }}:5432
    data_dir: /var/lib/pgsql/11/data
    pgpass: /tmp/pgpass
    authentication:
        replication:
            username: replicator
            password: {{ PASS_POSTGRES_FOR_DB }}
        superuser:
            username: postgres
            password: {{ PASS_POSTGRES_FOR_DB }}
    parameters:
        unix_socket_directories: '.,/tmp'

tags:
    nofailover: false
    noloadbalance: false
    clonefrom: false
    nosync: false
